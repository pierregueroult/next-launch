{
  "name": "next-launch",
  "version": "0.3.0",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx src/server/main.ts",
    "build": "next build",
    "start": "cross-env NODE_ENV=production tsx src/server/main.ts",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write . --config prettier.config.mjs",
    "format:check": "prettier --check . --config prettier.config.mjs",
    "prepare": "husky",
    "database:up": "docker compose -f src/db/database.docker-compose.yaml --env-file .env up -d && pnpm db:init",
    "database:down": "docker compose -f src/db/database.docker-compose.yaml --env-file .env down --volumes",
    "database:start": "docker compose -f src/db/database.docker-compose.yaml --env-file .env start",
    "database:stop": "docker compose -f src/db/database.docker-compose.yaml --env-file .env stop",
    "db:init": "pnpm db:generate && pnpm db:push",
    "db:generate": "prisma generate --schema src/db/schema.prisma",
    "db:push": "prisma db push --schema src/db/schema.prisma",
    "db:studio": "prisma studio --schema src/db/schema.prisma",
    "email:dev": "maildev -outgoing-host smtp.nextlaunch.com -outgoing-secure --outgoing-user 'myuser' --outgoing-pass 'mypass'",
    "postinstall": "npx prisma generate --schema src/db/schema.prisma",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.1",
    "@prisma/client": "^6.2.1",
    "@react-email/components": "^0.0.32",
    "@react-email/render": "^1.0.4",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.4.1",
    "express": "^4.19.2",
    "next": "15.1.6",
    "next-auth": "^5.0.0-beta.25",
    "next-intl": "^3.26.3",
    "nodemailer": "^6.10.0",
    "ora": "^8.1.1",
    "prisma": "^6.3.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-email": "^3.0.6",
    "rtl-detect": "^1.1.2",
    "server-only": "^0.0.1",
    "simple-git": "^3.27.0",
    "tsx": "^4.19.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@types/rtl-detect": "^1.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^9.19.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.5",
    "maildev": "^2.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.8",
      "@types/react-dom": "19.0.3"
    }
  },
  "bin": {
    "create-next-launch": "bin/install.mjs"
  }
}
