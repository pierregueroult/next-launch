{
  "name": "next-launch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node src/server/main.ts",
    "start": "cross-env NODE_ENV=production ts-node src/server/main.ts",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "database:up": "docker compose -f src/db/database.docker-compose.yaml --env-file .env up -d && pnpm db:init",
    "database:down": "docker compose -f src/db/database.docker-compose.yaml --env-file .env down --volumes",
    "database:start": "docker compose -f src/db/database.docker-compose.yaml --env-file .env start",
    "database:stop": "docker compose -f src/db/database.docker-compose.yaml --env-file .env stop",
    "db:init": "pnpm db:generate && pnpm db:push",
    "db:generate": "prisma generate --schema src/db/schema.prisma",
    "db:push": "prisma db push --schema src/db/schema.prisma",
    "db:studio": "prisma studio --schema src/db/schema.prisma",
    "email:dev": "maildev -outgoing-host smtp.nextlaunch.com -outgoing-secure --outgoing-user 'myuser' --outgoing-pass 'mypass'",
    "postinstall": "prisma generate --schema src/db/schema.prisma",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.1",
    "@prisma/client": "^5.15.0",
    "@react-email/components": "^0.0.19",
    "@react-email/render": "^0.0.15",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "express": "^4.19.2",
    "next": "15.1.6",
    "next-auth": "5.0.0-beta.19",
    "next-intl": "^3.19.3",
    "nodemailer": "^6.9.13",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-email": "2.1.4",
    "rtl-detect": "^1.1.2",
    "server-only": "^0.0.1",
    "ts-node": "^10.9.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@types/rtl-detect": "^1.0.3",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.5",
    "maildev": "^2.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "prisma": "^5.15.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.8",
      "@types/react-dom": "19.0.3"
    }
  }
}
